set record=""
set net_inc=5

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

# abook
set query_command = "abook --mutt-query '%s'"
macro generic,index,pager \ca "<shell-escape>abook<return>" "launch abook"
macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"

mailboxes "+INBOX" "+Arch Announce" "+Python Hun Levlista" "+uzbl"

set sort=threads
set sort_aux=date-sent
unset metoo

ignore *
unignore from: date: subject: to: cc: reply-to:
unignore organization: organisation: user-agent: x-mailer:

auto_view text/html
macro pager \cu |conkeror\n

set assumed_charset="cp1252"

set move = no

set editor='emacsclient %s > /dev/null'

source ~/.mutt/mutt.color
source ~/.mutt/mutt.gpg
