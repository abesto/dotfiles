set realname = "Zoltán Nagy"
set pager_index_lines=10

# set record="+[Gmail]/Elküldött levelek"
set record=""
set net_inc=5

set mailcap_path= ~/.mutt/mailcap
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

# abook
set query_command = "abook --mutt-query '%s'"
macro generic,index,pager \ca "<shell-escape>abook<return>" "launch abook"
macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"

# sort
set sort=threads
set sort_aux=date-sent
unset metoo

# displayed headers
ignore *
unignore from: date: subject: to: cc: reply-to:
unignore organization: organisation: user-agent: x-mailer:

# mail reminder
set beep_new = yes
set check_new = yes
set timeout = 300

# viewers, editor
auto_view text/html
macro pager \cu |conkeror\n
set assumed_charset="cp1252"
set move = no
set editor='emacsclient -c %s > /dev/null'

# profiles
source ~/.mutt/profile.default
send-hook . "source ~/.mutt/profile.gmail"
send-hook abesto0@gmail.com "source ~/.mutt/profile.inf.elte.hu"
send-hook proginf@listbox.elte.hu "source ~/.mutt/profile.inf.elte.hu"


source ~/.mutt/mutt.color.zenburn
source ~/.mutt/mutt.gpg
source ~/.mutt/mutt.sidebar
#source ~/.mutt/aliases
