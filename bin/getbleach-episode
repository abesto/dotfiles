#!/usr/bin/env bash
# Helper script for getbleach
#
# usage: getbleach-episode <episode-number> <output-dir>

EP=$1
DIR=$2
cd $DIR
echo "Downloading episode $EP... "
wget -qc `grep $EP "$DIR/links"` --output-document="ep$EP.html"
LINK=`grep flv "ep$EP.html" | sed -e 's/^.*file=\([^&]*\).*$/\1/'`
rm "ep$EP.html"
FILE=`echo $LINK | sed -e 's~.*/\(.*\)~\1~'`
touch $FILE
wget -c "$LINK" --output-document="$EP.flv.part"
mv $FILE "../$EP.flv"
echo "$EP done."
