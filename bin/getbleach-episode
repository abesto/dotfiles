#!/usr/bin/env bash
# Helper script for getbleach
#
# usage: getbleach-env <episode-number> <output-dir>

EP=$1
DIR=$2
echo "Downloading episode $EP... "
wget `grep $EP "$DIR/links"` --output-document="$DIR/ep$EP.html" -cq
LINK=`grep flv "$DIR/ep$EP.html" | sed -e 's/^.*file=\([^&]*\).*$/\1/'`
rm "$DIR/ep$EP.html"
wget "$LINK" --output-document="$DIR/$EP.flv.part" -cq
mv "$DIR/$EP.flv.part" "$DIR/$EP.flv"
echo "$EP done."
