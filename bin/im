#!/bin/sh
#
# Handle screen session named 'irc'
# If the session exists and is attached, do nothing
# If the session exists and is detached, reattach to it
# If the session doesn't exist, create it (with ~/.screenimrc)

SESSION=`screen -list | grep '.irc'`

if [ "$SESSION" == '' ]
then
  screen -c ~/.screenimrc
elif [[ "$SESSION" =~ 'Attached' ]]
then
  exit
fi

screen -r `echo $SESSION | cut -d. -f1`
